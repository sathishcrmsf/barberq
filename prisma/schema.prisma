// @cursor: This schema defines the WalkIn model for the MVP.
// Keep it simple - only what's needed per BRD.
// Updated to use PostgreSQL for Vercel deployment.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WalkIn {
  id           String   @id @default(cuid())
  customerName String
  service      String
  status       String   @default("waiting")
  notes        String?
  createdAt    DateTime @default(now())
}

