generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Category {
  id           String    @id
  name         String    @unique
  description  String?
  icon         String?
  displayOrder Int       @default(0)
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime
  Service      Service[]
}

model Customer {
  id        String   @id @default(cuid())
  phone     String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime
  email     String?
  WalkIn    WalkIn[]
}

model Service {
  id           String         @id
  name         String         @unique
  price        Float
  duration     Int
  description  String?
  isActive     Boolean        @default(true)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime
  categoryId   String?
  imageUrl     String?
  thumbnailUrl String?
  imageAlt     String?
  Category     Category?      @relation(fields: [categoryId], references: [id])
  StaffService StaffService[]
}

model Staff {
  id           String         @id
  name         String
  title        String?
  email        String?
  phone        String?
  imageUrl     String?
  bio          String?
  displayOrder Int            @default(0)
  isActive     Boolean        @default(true)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime
  StaffService StaffService[]
  WalkIn       WalkIn[]
}

model StaffService {
  id              String   @id
  staffId         String
  serviceId       String
  isPrimary       Boolean  @default(false)
  yearsExperience Int?
  createdAt       DateTime @default(now())
  Service         Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  Staff           Staff    @relation(fields: [staffId], references: [id], onDelete: Cascade)

  @@unique([staffId, serviceId])
}

model WalkIn {
  id           String    @id
  customerName String?
  service      String
  status       String    @default("waiting")
  notes        String?
  createdAt    DateTime  @default(now())
  barberName   String?
  startedAt    DateTime?
  customerId   String?
  completedAt  DateTime?
  staffId      String?
  Customer     Customer? @relation(fields: [customerId], references: [id], onDelete: Cascade)
  Staff        Staff?    @relation(fields: [staffId], references: [id])

  @@index([createdAt])
  @@index([customerId])
  @@index([staffId])
  @@index([status, createdAt])
  @@index([status])
}
