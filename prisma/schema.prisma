generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Category {
  id           String    @id @default(cuid())
  name         String    @unique
  description  String?
  icon         String?
  displayOrder Int       @default(0)
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime
  Service      Service[]
}

model Customer {
  id        String   @id @default(cuid())
  phone     String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime
  email     String?
  WalkIn    WalkIn[]
}

model Service {
  id           String         @id @default(cuid())
  name         String         @unique
  price        Float
  duration     Int
  description  String?
  isActive     Boolean        @default(true)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime
  categoryId   String?
  imageUrl     String?
  thumbnailUrl String?
  imageAlt     String?
  Category     Category?      @relation(fields: [categoryId], references: [id])
  StaffService StaffService[]
}

model Staff {
  id           String         @id @default(cuid())
  name         String
  title        String?
  email        String?
  phone        String?
  imageUrl     String?
  bio          String?
  displayOrder Int            @default(0)
  isActive     Boolean        @default(true)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime
  StaffService StaffService[]
  WalkIn       WalkIn[]
}

model StaffService {
  id              String   @id @default(cuid())
  staffId         String
  serviceId       String
  isPrimary       Boolean  @default(false)
  yearsExperience Int?
  createdAt       DateTime @default(now())
  Service         Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  Staff           Staff    @relation(fields: [staffId], references: [id], onDelete: Cascade)

  @@unique([staffId, serviceId])
}

model WalkIn {
  id           String       @id @default(cuid())
  customerName String?
  service      String
  status       String       @default("waiting")
  notes        String?
  createdAt    DateTime     @default(now())
  barberName   String?
  startedAt    DateTime?
  customerId   String?
  completedAt  DateTime?
  staffId      String?
  Customer     Customer?    @relation(fields: [customerId], references: [id], onDelete: Cascade)
  Staff        Staff?       @relation(fields: [staffId], references: [id])
  ProductSales ProductSale[]

  @@index([createdAt])
  @@index([customerId])
  @@index([staffId])
  @@index([status, createdAt])
  @@index([status])
}

model Product {
  id                String       @id @default(cuid())
  name              String
  description       String?
  sku               String?       @unique
  price             Float
  cost              Float?       // Cost per unit (for profit calculation)
  stockQuantity     Int          @default(0)
  lowStockThreshold Int          @default(5) // Alert when stock falls below this
  unit              String       @default("unit") // e.g., "bottle", "box", "unit"
  imageUrl          String?
  thumbnailUrl      String?
  isActive          Boolean      @default(true)
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  ProductSales      ProductSale[]

  @@index([isActive])
  @@index([stockQuantity])
}

model ProductSale {
  id          String   @id @default(cuid())
  productId   String
  walkInId    String?  // Optional - can track standalone product sales
  quantity    Int      @default(1)
  unitPrice   Float    // Price at time of sale (for historical accuracy)
  totalPrice  Float    // quantity * unitPrice
  soldAt      DateTime @default(now())
  notes       String?
  Product     Product  @relation(fields: [productId], references: [id], onDelete: Restrict)
  WalkIn      WalkIn?  @relation(fields: [walkInId], references: [id], onDelete: SetNull)

  @@index([productId])
  @@index([walkInId])
  @@index([soldAt])
}
